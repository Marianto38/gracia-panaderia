
<%= turbo_frame_tag(dom_id(product)) do %>

<div class="class container-card-product">
  <div class="d-flex justify-content-center text-center container-03 border-0 pb-3">
    <img src="assets/solo.png" class="d-flex justify-content-center text-center" alt="..." style="width: 200px;">
    <div class="card-body">
       <%= link_to product_path(product), class: "text-decoration-none fw-bold text-info" do %>
      <h4 class="mt-3"><%= (product.name).capitalize %></h4>
      <% end %> 


<!-- Button trigger modal -->
<!-- <button type="button" class="btn btn-transparent text-info fs-4" data-bs-toggle="modal" data-bs-target="#productModal">
  <%= (product.name).capitalize %>
</button> -->





          <p class="card-text p-3"><%= description_truncate(product.description) %></p>

            <div class="card-footer">
              <div class="row">
                <div class="col">
                  <i class="fa-solid fa-weight-hanging text-info"></i>
                  <p> 500 gr </p>
                </div>
                <div class="col">
                  <i class="fa-solid fa-dollar-sign text-info"></i>
                  <p> <%= number_to_currency(product.price) %></p>
                </div>
              </div>
           </div>
           <%= button_to 'Add to Cart', line_items_path(product_id: product), data: { controller: 'sweetalert', action: "click->sweetalert#addItem", sweetalert_title_value: product.name },
           form_class: 'inline', class: 'btn btn-info  ps-5 pe-5' %>


        <!-- <%= link_to 'Agregar al carrito', line_items_path(product_id: product), data: { controller: 'sweetalert', action: "click->sweetalert#addItem", sweetalert_title_value: product.name },
        form_class: 'inline', class: 'btn btn-info  ps-5 pe-5 mb-3' %> -->
      </div>
    </div>
  </div>
<% end %>




 <!-- Modal -->
 <div class="modal fade" id="productModal" tabindex="-1" aria-labelledby="productModalLabel" aria-hidden="true">
  <div class="modal-dialog modal-xl">
    <div class="modal-content  img-cart rounded-4">
      <div class="modal-header">

        <h5 class="modal-title text-info" id="productModalLabel"><%= product.name.capitalize %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body  ">
        <!-- contenido -->

        <div class="card mb-3 container-03" style="">
          <div class="row g-0">
            <div class="col-md-4  d-flex align-items-center justify-content-center">
              <img src="assets/solo.png" class="img-fluid rounded-start" alt="...">
            </div>
            <div class="col-md-8">
              <div class="card-body">
                <h5 class="card-title"><%= product.name.capitalize %></h5>
                <p class="card-text"><%= product.description %></p>
                <p class="card-text"><%= number_to_currency(product.price) %></p>
                <p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p>
              </div>
            </div>
          </div>
        </div>
        <!-- fin contenido -->
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Volver</button>
        <%= button_to 'Add to Cart', line_items_path(product_id: product), data: { controller: 'sweetalert', action: "click->sweetalert#addItem", sweetalert_title_value: product.name },
form_class: 'inline', class: 'btn btn-info  ps-5 pe-5' %>
      </div>
    </div>
  </div>
</div>
  <!-- fin de modal -->
